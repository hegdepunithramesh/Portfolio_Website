  }

  .profile-text {
    flex: 1;
    min-width: 300px;
  }

  .profile-text p {
    color: #555;
    line-height: 1.8;
    font-size: 1.05rem;
    margin-bottom: 15px;
  }

  .education-section {
    padding: 30px 0;
  }

  .education-section h2 {
    font-size: 2rem;
    margin-bottom: 30px;
    text-align: center;
    color: #3586ff;
  }

  .timeline {
    border-left: 3px solid #3586ff;
    padding-left: 30px;
    margin-left: 20px;
  }

  .timeline-item {
    margin-bottom: 30px;
    position: relative;
    padding: 20px;
    background: linear-gradient(135deg, #667eea10 0%, #764ba210 100%);
    border-radius: 10px;
    transition: all 0.3s ease;
  }

  .timeline-item:hover {
    background: linear-gradient(135deg, #667eea20 0%, #764ba220 100%);
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    transform: translateX(5px);
  }

  .timeline-item::before {
    content: "";
    position: absolute;
    left: -42px;
    top: 25px;
    width: 20px;
    height: 20px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 50%;
    border: 4px solid #fff;
    box-shadow: 0 0 0 2px #3586ff;
  }

  .timeline-item h3 {
    font-size: 1.2rem;
    margin-bottom: 8px;
    color: #333;
  }

  .timeline-item span {
    color: #3586ff;
    font-weight: 600;
  }

  .timeline-item p {
    color: #555;
    line-height: 1.6;
    margin: 10px 0 0 0;
  }

  .timeline-item ul {
    list-style: none;
    padding: 10px 0 0 0;
    margin: 0;
  }

  .timeline-item li {
    padding: 5px 0 5px 25px;
    position: relative;
    color: #555;
  }

  .timeline-item li::before {
    content: "‚úÖ";
    position: absolute;
    left: 0;
    font-size: 0.9rem;
  }

  .timeline-item strong {
    color: #3586ff;
  }

  @media (max-width: 768px) {
    .about-container h1 {
      font-size: 2rem;
    }

    .profile-section {
      flex-direction: column;
      text-align: center;
    }

    .profile-text {
      min-width: auto;
    }

    .timeline {
      margin-left: 10px;
      padding-left: 20px;
    }

    .timeline-item::before {
      left: -32px;
    }
  }
</style>

