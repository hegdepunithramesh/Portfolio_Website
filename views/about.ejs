<style>
  .about-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 20px;
  }

  .about-container h1 {
    font-size: 2.5rem;
    margin-bottom: 40px;
    color: #333;
    text-align: center;
  }

  .profile-section {
    display: flex;
    align-items: center;
    gap: 30px;
    margin-bottom: 50px;
    padding: 30px;
    background: linear-gradient(135deg, #667eea15 0%, #764ba215 100%);
    border-radius: 20px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .profile {
    height: 200px;
    width: 200px;
    object-fit: cover;
    border-radius: 50%;
    border: 5px solid #3586ff;
