  }

  .role-card li::before {
    content: "‚úì";
    position: absolute;
    left: 0;
    color: #4ade80;
    font-weight: bold;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 25px;
    margin-top: 30px;
  }

  .skill-category {
    background: #f8f9fa;
    padding: 25px;
    border-radius: 12px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
  }

  .skill-category:hover {
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    transform: translateY(-3px);
  }

  .skill-category h3 {
    font-size: 1.2rem;
    margin-bottom: 15px;
    color: #3586ff;
    text-align: center;
  }

  .skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    justify-content: center;
  }

  .skill-tag {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 500;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .skill-tag:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
  }

  .positions-timeline {
    max-width: 800px;
    margin: 30px auto;
  }

  .timeline {
    border-left: 3px solid #3586ff;
    padding-left: 30px;
    margin-left: 20px;
  }

  .timeline-item {
    margin-bottom: 30px;
    position: relative;
    padding: 20px;
    background: #f8f9fa;
    border-radius: 10px;
    transition: all 0.3s ease;
  }

  .timeline-item:hover {
    background: #fff;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    transform: translateX(5px);
  }

  .timeline-item::before {
    content: "";
    position: absolute;
    left: -42px;
    top: 25px;
    width: 20px;
    height: 20px;
    background-color: #3586ff;
    border-radius: 50%;
    border: 4px solid #fff;
    box-shadow: 0 0 0 2px #3586ff;
  }

  .timeline-item h3 {
    font-size: 1.2rem;
    margin-bottom: 8px;
    color: #333;
  }

  .timeline-item span {
    color: #3586ff;
    font-weight: 600;
  }

  .timeline-duration {
    color: #666;
    font-size: 0.9rem;
    font-style: italic;
    margin: 8px 0;
  }

  @media (max-width: 768px) {
    .experience-container h1 {
      font-size: 2rem;
    }

    .section-title {
      font-size: 1.4rem;
    }

    .experience-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .roles-grid {
      grid-template-columns: 1fr;
    }

    .skills-grid {
      grid-template-columns: 1fr;
    }

    .timeline {
      margin-left: 10px;
      padding-left: 20px;
    }

    .timeline-item::before {
      left: -32px;
    }
  }
</style>

