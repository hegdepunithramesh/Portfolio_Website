<%- include("partials/header.ejs") %>

<style>
  .contact-container {
    max-width: 700px;
    margin: 0 auto;
    padding: 20px;
  }

  .contact-container h1 {
    font-size: 2.5rem;
    margin-bottom: 20px;
    color: #333;
    text-align: center;
  }

  .contact-intro {
    text-align: center;
    color: #666;
    font-size: 1.1rem;
    margin-bottom: 40px;
    line-height: 1.6;
  }

  .contact-form-wrapper {
    background: linear-gradient(135deg, #667eea15 0%, #764ba215 100%);
    padding: 40px;
    border-radius: 20px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
  }

  form {
    margin: 0;
  }

  .form-group {
    margin-bottom: 25px;
  }

  .form-label {
    display: block;
    margin-bottom: 8px;
    color: #333;
    font-weight: 600;
    font-size: 0.95rem;
  }

  .feedback-input {
    color: #333;
    font-weight: 500;
    font-size: 16px;
    border-radius: 10px;
    line-height: 22px;
    background-color: white;
    border: 2px solid #e0e0e0;
    transition: all 0.3s;
    padding: 15px;
    margin-bottom: 0;
    width: 100%;
    box-sizing: border-box;
    outline: 0;
  }

  .feedback-input:focus {
    border: 2px solid #3586ff;
    background-color: white;
    box-shadow: 0 0 0 3px rgba(53, 134, 255, 0.1);
  }

  textarea.feedback-input {
    height: 150px;
    line-height: 150%;
    resize: vertical;
  }

  .submit-btn {
    width: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 10px;
    border: 0;
    cursor: pointer;
    color: white;
    font-size: 18px;
    padding: 15px;
    transition: all 0.3s;
    font-weight: 700;
    box-shadow: 0 5px 20px rgba(102, 126, 234, 0.3);
  }

  .submit-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(102, 126, 234, 0.5);
  }

  .alert {
    margin-top: 25px;
    padding: 15px 20px;
    border-radius: 10px;
    font-size: 1rem;
    font-weight: 600;
    text-align: center;
    animation: slideIn 0.3s ease;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .alert-success {
    background: linear-gradient(135deg, #3586ff15 0%, #667eea15 100%);
    color: #28a745;
    border: 2px solid #28a745;
  }

  .alert-error {
    background: linear-gradient(135deg, #667eea15 0%, #764ba215 100%);
    color: #dc3545;
    border: 2px solid #dc3545;
  }

  .notice-banner {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 20px 25px;
    border-radius: 15px;
    margin-bottom: 30px;
    text-align: center;
    border: 2px solid #667eea;
    box-shadow: 0 5px 20px rgba(102, 126, 234, 0.3);
  }

  .notice-banner h3 {
    color: #fff;
    font-size: 1.2rem;
    margin: 0 0 8px 0;
    font-weight: 700;
  }

  .notice-banner p {
    color: #fff;
    margin: 0;
    font-size: 0.95rem;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .contact-container h1 {
      font-size: 2rem;
    }

    .contact-form-wrapper {
      padding: 25px;
    }

    .contact-intro {
      font-size: 1rem;
    }
  }
</style>

<div class="contact-container">
  <h1>üì¨ Contact Me</h1>
  <p class="contact-intro">
    Have a project in mind or want to collaborate? Feel free to reach out! I'll get back to you as soon as possible.
  </p>

  <!-- Notice Banner -->
  <div class="notice-banner">
    <h3>üöß Feature Under Development</h3>
    <p>The contact form functionality is currently being set up. It will be fully functional in a few days. Thank you for your patience!</p>
  </div>

  <div class="contact-form-wrapper">
    <form action="/contact" method="POST">
      <div class="form-group">
        <label class="form-label" for="name">Name</label>
        <input name="name" id="name" type="text" class="feedback-input" placeholder="Enter your name" required />
      </div>

      <div class="form-group">
        <label class="form-label" for="email">Email</label>
        <input name="email" id="email" type="email" class="feedback-input" placeholder="Enter your email" required />
      </div>

      <div class="form-group">
        <label class="form-label" for="message">Message</label>
        <textarea name="message" id="message" class="feedback-input" placeholder="Write your message here..." required></textarea>
      </div>

      <input type="submit" value="SEND MESSAGE" class="submit-btn" />
    </form>

    <% if (status === "success") { %>
      <div class="alert alert-success">‚úÖ Message sent successfully! I'll get back to you soon.</div>
    <% } else if (status === "fail") { %>
      <div class="alert alert-error">‚ùå Something went wrong. Please try again or email me directly.</div>
    <% } %>
  </div>
</div>

<%- include("partials/footer.ejs") %>